<Window x:Class="ZX_sharp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ZX_WPF"
        mc:Ignorable="d"
        Title="MainWindow" Width="325px" Height="290px">
    <Grid x:Name="MainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="35"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" >
            <Rectangle x:Name="keyIndicator"  Width="10" Height="10" Fill="Red" Margin="5 0 0 5"></Rectangle>
            <Button Name="btnOpenFile" Height="30" Width="70" Click="btnOpenFile_Click" Margin="5 0 0 5">Load image</Button>
            <Button Name="btnReset" Height="30" Width="70" Click="btnReset_Click" Margin="5 0 0 5">Reset PC</Button>
        </StackPanel>
        <Image Grid.Row="2" x:Name="screenImage" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" ></Image>
    </Grid>
</Window>
