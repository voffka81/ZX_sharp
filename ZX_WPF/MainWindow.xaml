<Window x:Class="ZX_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow"
        xmlns:local="clr-namespace:ZX_WPF">
    <Window.DataContext>
        <local:MainWindowViewModel/>
    </Window.DataContext>
    <Grid x:Name="MainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="35"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition   Width="*"/>
            <ColumnDefinition   Width="150"/>
        </Grid.ColumnDefinitions>
        <StackPanel  Orientation="Horizontal" Grid.ColumnSpan="2" >
            <Button Focusable="False" Height="30" Width="70" Command="{Binding OpenFileCommand}" Margin="5 0 0 5">Load image</Button>
            <Button Focusable="False" Height="30" Width="70" Command="{Binding PlayTapeCommand}" Margin="5 0 0 5">Play Tape</Button>
            <Button Focusable="False" Height="30" Width="70" Command="{Binding StopTapeCommand}" Margin="5 0 0 5" Content="Stop Tape"/>
            <Button Focusable="False" Height="30" Width="110" Command="{Binding SaveSnapshotCommand}" Margin="5 0 0 5">Save Snapshot</Button>

            <Button Name="btnReset" Focusable="False" Height="30" Width="70" Command="{Binding ResetCommand}" Margin="50 0 0 5">Reset PC</Button>
            <TextBlock Text="Vol" VerticalAlignment="Center" Margin="20 0 5 5"/>
            <Slider Focusable="False" Width="140"
                    Minimum="0"
                    Maximum="1"
                    TickFrequency="0.05"
                    SmallChange="0.01"
                    LargeChange="0.1"
                    IsSnapToTickEnabled="True"
                    IsMoveToPointEnabled="True"
                    Value="{Binding Volume, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    Margin="0 0 0 5"/>
            <TextBlock Text="{Binding Volume, StringFormat={}{0:P0}}" VerticalAlignment="Center" Margin="5 0 0 5"/>
        </StackPanel>
        <Image Grid.Row="2" x:Name="screenImage" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Source="{Binding Screen}"></Image>
        <Grid Grid.Row="2" Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition   Width="*"/>
                <ColumnDefinition   Width="*"/>
            </Grid.ColumnDefinitions>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="PC=>"/>
                <TextBlock Text="{Binding Speccy.CpuDebugInfo.PC}"/>
            </StackPanel>
            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <TextBlock Text="{Binding Speccy.CpuDebugInfo.OpCode, StringFormat={}{0:x}}"/>
            </StackPanel>

        </Grid>
    </Grid>
</Window>
